<link rel="stylesheet" href="./css/bootstrap.min.css">
<% include layout/header.ejs %>
  <!-- Header End -->
  <style>
    .paddinginput {
      padding: 16px 0 16px 16px !important;
    }

    .input-group {
      margin-left: 25px;
    }
  </style>
  <div id="maincontainer">
    <section id="product">
      <div class="container">
        <!--  breadcrumb -->
        <ul class="breadcrumb">
          <li>
            <a href="/">Home</a>
            <span class="divider">/</span>
          </li>
          <li class="active">Contact</li>
        </ul>
        <!-- Contact Us-->
        <h1 class="heading1"><span class="maintext">Contact</span><span class="subtext"> Contact Us for more</span></h1>
        <div class="row">
                  <div class="span9">
                    <form class="form-horizontal " action="" method="post">
                      <div class="container mt-4">

                        <div class="py-5 text-center">
                          <i class="fa fa-credit-card fa-4x" aria-hidden="true"></i>
                          <h2 style="font-weight: bold; font-size: 30px;">Thanh toán</h2>
                          <p class="lead">Vui lòng kiểm tra thông tin Khách hàng, thông tin Giỏ hàng trước khi Đặt hàng.
                          </p>
                        </div>

                        <div class="row">
                         
                          <div class="col-md-4 order-md-2 mb-4">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                              <span class="text-muted">Giỏ hàng</span>
                              <span class="badge badge-secondary badge-pill"><%= counter %> </span>
                            </h4>
                            <ul class="list-group mb-3">
                              <% var total=0; var counter=0; if(data) { data.forEach(function(cartItem) { total+=cartItem.price; counter++; 
                              }); } %>
                                <% data.forEach(function(cartItem){ %>
                                  <li class="list-group-item d-flex justify-content-between lh-condensed">
                                    <div>
                                      <h6 class="my-0"><%= cartItem.item.name %></h6>
                                      <small class="text-muted"><%= parseInt(cartItem.item.salePrice).toLocaleString('en-us') %> đ x <%= cartItem.quantity %></small>
                                    </div>
                                    <span class="text-muted"><%= parseInt(cartItem.item.salePrice).toLocaleString('en-us') %> đ</span>
                                  </li>
                                <% }); %>
                                <li class="list-group-item d-flex justify-content-between">
                                  <span>Tổng thành tiền</span>
                                  <strong><%= parseInt(total).toLocaleString('en-us') %> đ</strong>
                                </li>
                            </ul>




                          </div>
                          <div class="col-md-8 order-md-1">
                            <h4 class="mb-3" style="text-align: center;
                      font-size: 25px;
                      font-weight: bold;">Thông tin khách hàng</h4>

                            <div class="row">
                              <div class="col-md-12">
                                <label for="name">Họ tên</label>
                                <input type="text " class="form-control" name="name" id="name" value="" required>
                              </div>
                              <div class="col-md-12">
                                <label for="email">Email</label>
                                <input type="email" class="form-control paddinginput email" name="email" id="email"
                                  value="" required>
                              </div>
                              <div class="col-md-12">
                                <label for="ship">Địa chỉ</label>
                                <input type="text" class="form-control paddinginput" name="ship" id="ship" value="">
                              </div>
                              <div class="col-md-12">
                                <label for="phone">Điện thoại</label>
                                <input type="text" class="form-control paddinginput" name="phone" id="phone" value="">
                              </div>
                              <div class="col-md-12">
                                <label for="message">Ghi chú</label>
                                <textarea class="required paddinginput" rows="1" cols="100" id="message"
                                  name="message"></textarea>
                              </div>
                            </div>

                            <h4 class="mb-3">Hình thức thanh toán</h4>

                            <div class="d-block my-3">
                              <div class="custom-control custom-radio">
                                <input id="httt-1" name="httt_ma" type="radio" class="custom-control-input" required=""
                                  value="1">
                                <label class="custom-control-label" for="httt-1">Tiền mặt</label>
                              </div>
                              <div class="custom-control custom-radio">
                                <input id="httt-2" name="httt_ma" type="radio" class="custom-control-input" required=""
                                  value="2">
                                <label class="custom-control-label" for="httt-2">Thanh toán trực tuyến</label>
                              </div>

                            </div>
                            <hr class="mb-4">
                            <div style="text-align: center;">
                              <input class="btn btn-primary  " style=" border-radius: 3px;" type="submit"
                                value="Đặt hàng" id="submit_id">
                              <a href="/gio-hang.html" class="btn btn-orange "
                                Style=" margin-right:5px; border-radius: 3px;">Trở về</a>
                            </div>

                          </div>
                        </div>

                      </div>
                    </form>
                  </div>

                  <!-- Sidebar Start-->

                  <!-- Sidebar End-->

        </div>
      </div>
    </section>
  </div>

  <!-- Footer -->
  <% include layout/footer.ejs %>