<style>
  .kodfun-geleri{
    display: flex;
    height: 20rem;
    gap:1rem
  }
  .kodfun-geleri > div{
    flex:1;
    border-radius: 1rem;
    background-position: center;
    background-repeat: no-repeat;
    background-size: auto 100%;
    transition: all .8s cubic-bezier(.25, .4, .45, 1.4);
    
  }
  .kodfun-geleri > div:hover{
    flex: 5;
  }
  .tooltip-test::after{
    border-style: solid;
    content: "";
    position: absolute;
    /* width: 20px; */
    /* height: 20px; */
    top: 40px;
    right: 0;
    border-color: #00ff02 #00ff02 transparent #00ff02;
    border-width: 0 28px 10px;
  }
</style>
<% include layout/header.ejs %>


<!-- Header End -->

<div id="maincontainer">
  <!-- Slider Start-->
  <section class="slider">
    <div class="container">
      <div class="flexslider" id="mainslider">
        <div class="kodfun-geleri">
          <div style="background-image: url(img/BANPHIM/Akko/PC98B/hinh2.png);"></div>
          <div style="background-image: url(img/LAPTOP/ACER/Aspire3A315/hinh1.webp);"></div>
          <div style="background-image: url(img/MANHINH/AOC/AOC-27G2-27-IPS-144Hz/hinh1.webp);"></div>
          <div style="background-image: url(img/LINHKIENPC/TANNHIET/SE-214XT/hinh1.webp);"></div>
          <div style="background-image: url(img/CHUOT/Asus/ROG/hinh2.webp);"></div>
        </div>
      </div>
      
    </div>
    
  </section>
  <!-- Slider End-->
  <!-- Featured Product-->
   <% categories.forEach(function(ca) { if (ca.counter > 0) { var i = 0; %>
      <section id="featured" class="row mt40">
        <div class="container">
          <h1 class="heading1"><span class="maintext"> <%= ca.name%> </span></h1>
          <ul class="thumbnails">
            <%  products.forEach(function(pro){ if(i < 100) { if(pro.categoryId === ca.id){ i ++ ; %>
                 <li class="span3" style="border-radius: 3px;
                 box-shadow: rgba(136, 165, 191, 0.48) 6px 2px 16px 0px, rgba(255, 255, 255, 0.8) -6px -2px 16px 0px;
                  ">
                          <div class="thumbnail">
                          <% if(pro.sale > 0) { %>
                            <span class="tooltip-test" style="    background-color: #00ff02;
                            color: white;
                            font-size: 15px;
                            z-index: 1000;
                            font-weight: 800;
                            position: absolute;
                            min-width: 34px;
                            top: 0;
                            /* left: 0; */
                            right: 0;
                            padding: 10px 11px;">-<%= pro.sale %>%</span>
                          <% } %>
                          <a href="/san-pham/<%= pro.urlRewriteName%>.<%= pro.id%>.<%= pro.categoryId%>.html"><img alt="" src="upload/<%= pro.photo %>" style="font-size:10px ; height : 300px  ; width:100% "></a>
                          <div class="pricetag" style="background:white;">
                            <span class="spiral"style="display:none" ></span><a href="/add-cart.<%= pro.id %>" class="productcart" style="display:none">ADD TO CART</a>
                            <a class="prdocutname" href="/san-pham/<%= pro.urlRewriteName%>.<%= pro.id%>.<%= pro.categoryId%>.html" style="color:black ;font-size: 16px ; height : 50px; width : 200px ;display: -webkit-box;
                              -webkit-box-orient: vertical;
                              -webkit-line-clamp: 2;
                              line-height: 1.5;
                              overflow: hidden;"> <b><%= pro.name %></b></a>
                    
                            <div class="price">
                            <!-- parseInt(x).toLocaleString('en-us') cho số tiền có dấu phẩy-->
                              <% if(pro.sale > 0) { %>
                              <div class="pricenew" style="color:#00ff02 ;float: right; "><%= parseInt(pro.salePrice).toLocaleString('en-us') %> <p style="color:#00ff02 ;float:right;">đ</p></div>
                              <div class="pricenew" style="color:black ;float: right; margin-right: 3px;text-decoration: line-through; margin-right: 13px"><%= parseInt(pro.price).toLocaleString('en-us') %><p style="color:black  ;float: right;">đ</p></div>
                              <% } else { %>
                               <div class="pricenew" style="color:black ; margin-right: 100px"><%= parseInt(pro.price).toLocaleString('en-us') %>
                               <p style="color:black  ;float: right;">đ</p></div>
                              <% } %>
                        </div>
                      </div>
                    </div>
                  </li>
            <% }}})%>
          </ul>
        </div>
      </section>
  <% }})%>
  <!-- Latest Product-->
  <!-- Section Start-->
  

<!-- Footer -->
<% include layout/footer.ejs %>
